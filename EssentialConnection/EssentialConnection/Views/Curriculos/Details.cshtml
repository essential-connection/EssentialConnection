@model EssentialConnection.Models.Curriculo

@{
    ViewData["Title"] = "Details";
}

<div class="h-full w-full flex justify-center md:justify-between items-center">
    <div class="hidden h-full lg:flex lg:block w-1/5  bg-indigo-900 px-10 justify-center">
    </div>
    <div class="contents divide-x-2 divide-zinc-300">
    <div class="pb-96 pr-48 w-80">
        <div class="md:fixed pb-36 ">
            <div class="md:block md:ml-12">

                <div class="mb-12 md:h-fit text-center mt-4  justify-center items-center">
                    <h1 class="text-2xl text-gray-800 font-bold">
                        @Html.DisplayFor(@model => model.Aluno.NomeCompleto)
                    </h1>
                    <h1 class="text-lg text-gray-700 font-bold">
                        @Html.DisplayFor(@model => model.Aluno.Curso.Nome)
                    </h1>
                    <div class="text-gray-600 md:hidden mt-1">
                        @Html.DisplayFor(@model => model.Aluno.email)
                    </div>
                </div>
            </div>
            <div class="mx-4 my-4 hidden md:block">
                <div class="my-5 text-lg text-gray-600 flex">
                    <div class="mr-2">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="24"
                             height="24"
                             viewBox="0 0 24 24">
                            <path d="M20,4H6C4.897,4,4,4.897,4,6v5h2V8l6.4,4.8c0.178,0.133,0.389,0.2,0.6,0.2s0.422-0.067,0.6-0.2L20,8v9h-8v2h8 c1.103,0,2-0.897,2-2V6C22,4.897,21.103,4,20,4z M13,10.75L6.666,6h12.668L13,10.75z" />
                            <path d="M2 12H9V14H2zM4 15H10V17H4zM7 18H11V20H7z" />
                        </svg>
                    </div>
                    @Html.DisplayFor(@model => model.Aluno.email)
                </div>
                <div class="my-5 text-lg text-gray-600 flex">
                    <div class="mr-2 pt-1">
                        <svg class="h-5 w-5 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                        </svg>

                    </div>
                    @Html.DisplayFor(@model => model.Aluno.Telefone)
                </div>
                <a href=""
                   class="my-5 text-blue-500 text-lg text-gray-600 flex">
                    <div class="mr-2 pt-1">
                        <svg class="h-5 w-5 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>

                    </div>
                    @Html.DisplayFor(@model => model.Aluno.Curso.Nome)
                </a>
            </div>
            <hr class="">
        </div>
    </div>
    <div class="text-center p-2.5 w-1/3 ">
        <div class="mx-4 mb-6">
            <h1 class="mb-4 text-4xl text-gray-700 font-bold">Descrição</h1>
            <p class="text-lg">
                @Html.DisplayFor(@model => model.DescricaoPessoal)
            </p>
        </div>
        <div class="mx-4">
            <h1 class="mb-4 text-4xl text-gray-700 font-bold">Experiencia</h1>
            <ul>
                @foreach (var item in @Model.ItensCurriculo)
                {
                    <li class="mb-4">
                        <h2 class="text-2xl font-medium text-gray-800">
                            @Html.DisplayFor(modelItem => item.Nome)
                        </h2>
                        <div class="mt-1">
                            <div>
                                <i class="bx bx-buildings" style="color: #666"></i>
                                <small class="text-base text-gray-800">
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </small>
                            </div>
                            <div>

                                @if (item.DataFim == null)
                                {
                                    <i class="bx bx-calendar text-sm" style="color: #666"></i>
                                    <small class="text-sm text-gray-600">
                                        @Html.DisplayFor(modelItem => item.DataInicio)- Atualmente
                                    </small>

                                }
                                else
                                {
                                    <i class="bx bx-calendar text-sm" style="color: #666"></i>
                                    <small class="text-sm text-gray-600">
                                        @Html.DisplayFor(modelItem => item.DataInicio) - @Html.DisplayFor(modelItem => item.DataFim)
                                    </small>
                                }
                            </div>
                        </div>
                    </li>

                }
                @*<li class="mb-4">
                    <h2 class="text-2xl font-medium text-gray-800">
                    Cargo
                    </h2>
                    <div class="mt-1">
                    <div>
                    <i class="bx bx-buildings" style="color: #666"></i>
                    <small class="text-base text-gray-800">
                    Descrição
                    </small>
                    </div>
                    <div>
                    <i class="bx bx-calendar text-sm" style="color: #666"></i>
                    <small class="text-sm text-gray-600">Duração                 </small>
                    </div>
                    </div>
                    </li>*@
            </ul>
        </div>
        <div class="mx-4">
            <h1 class="mb-4 text-4xl text-gray-700 font-bold">Competencias</h1>
            <div class="grid grid-lines grid-cols-3 auto-rows-auto gap-3 ">
                @foreach (var item in Model.Compentencias)
                {
                    <ul>
                        <li class="mb-6 flex flex-wrap">
                            <span class="mr-2 my-1 rounded-full border px-4 text-sm py-2 font-medium bg-gray-200">@Html.DisplayFor(mobelItem  => item.Descricao)</span>
                        </li>
                    </ul>
                }
            </div>

        </div>
    </div>
    </div>
    <div class="hidden h-full lg:flex lg:block w-1/5 bg-indigo-900 px-10 justify-center">
    </div>

</div>