<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EssentialConnection</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/css/app.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EssentialConnection.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-slate-100 py-1">
        <nav class="flex items-center justify-between mx-4">
            <a class="text-indigo-700 uppercase text-xl font-semibold w-1/4" asp-area="" asp-controller="Home" asp-action="Index">Essential Connection</a>
            @if(true)
            {
                <div class="md:hidden">
                    <button>
                        Menu
                    </button>
                </div>

                <ul class="hidden md:flex grow justify-evenly w-1/2">
                    <li class="nav-item">
                        <a class="nav-link text-slate-800" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-slate-800" asp-area="" asp-controller="Competencias" asp-action="Index">Competencias</a>
                    </li>
                </ul>
            }
            <ul class="hidden md:flex w-1/4 justify-center">
                <partial name="_LoginPartial" />
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - EssentialConnection - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
