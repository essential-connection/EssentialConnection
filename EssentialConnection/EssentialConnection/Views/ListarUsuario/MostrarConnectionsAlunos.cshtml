@model IEnumerable<EssentialConnection.Models.Tinder>

@{
    ViewData["Title"] = "MostrarConnectionsAlunos";
}

<h1>MostrarConnectionsAlunos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeVaga)

            <th>
                <h1>Nome Organização</h1>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeAluno)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeVaga)
            </td>
            <td>
                    @{
                        if (item.EmpresaId != null)
                        {
                            @Html.DisplayFor(modelItem => item.NomeEmpresa)
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.NomeCurso)
                        }
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeAluno)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
