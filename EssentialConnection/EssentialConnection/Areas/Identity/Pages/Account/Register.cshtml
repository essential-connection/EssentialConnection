@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $('#selectTipo').on('change',function(){
            var valorSelect =$(this).val();
            $('#tipoPerfil').children('div').hide();
            if(valorSelect==0)
                $('#divAluno').show();
            if(valorSelect==1)
                $('#divEmpresa').show();
            if(valorSelect==2)
                $('#divCurso').show();
        });
        $(document).ready(function(){
            $('#tipoPerfil').children('div').hide();
        });
    </script>

